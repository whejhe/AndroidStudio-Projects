<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sillas">

    <ImageButton
        android:id="@+id/atras_bot"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="irAtras"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087"
        app:srcCompat="@mipmap/atras" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124"
        app:srcCompat="@mipmap/linea" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:fontFamily="@font/hind_medium"
        android:text="@string/sillas"
        android:textColor="#213140"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/atras_bot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toEndOf="@+id/atras_bot"
        app:layout_constraintTop_toTopOf="@+id/atras_bot"
        app:layout_constraintVertical_bias="0.52" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="180dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="420dp"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@mipmap/silla1" />

            <Button
                android:id="@+id/botSilla1"
                android:layout_width="367dp"
                android:layout_height="60dp"
                android:backgroundTint="#1C5C98"
                android:fontFamily="@font/hind_semibold"
                android:paddingTop="-1dp"
                android:text="Añadir al carrito"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="420dp"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@mipmap/silla2" />

            <Button
                android:id="@+id/botSilla2"
                android:layout_width="367dp"
                android:layout_height="60dp"
                android:backgroundTint="#1C5C98"
                android:fontFamily="@font/hind_semibold"
                android:paddingTop="-1dp"
                android:text="Añadir al carrito"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="420dp"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@mipmap/silla3" />

            <Button
                android:id="@+id/botSilla3"
                android:layout_width="367dp"
                android:layout_height="60dp"
                android:backgroundTint="#1C5C98"
                android:fontFamily="@font/hind_semibold"
                android:paddingTop="-1dp"
                android:text="Añadir al carrito"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>