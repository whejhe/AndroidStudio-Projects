<resources>
    <!-- Base application theme. -->
    <style
        name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/First</item>
        <item name="colorPrimaryDark">@color/Second</item>
        <item name="colorAccent">@color/Third</item>
    </style>
    <style name="movie_name">
        <item name="android:layout_marginBottom">@dimen/movie_name_margin</item>
        <item name="android:textColor">@color/whiteFont</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="head_style">
        <item name="android:textSize">@dimen/normal_dimen</item>
        <item name="android:layout_marginBottom">@dimen/other_margin</item>
        <item name="android:textColor">@color/whiteFont</item>
    </style>
    <style name="star_image_style">
        <item name="android:layout_toRightOf">@id/rating_head</item>
        <item name="android:layout_below">@id/release_date</item>
        <item name="android:layout_marginLeft">@dimen/star_align</item>
    </style>
    <style name="synopsis_head_style">
        <item name="android:layout_marginTop">@dimen/synopsis_head</item>
        <item name="android:textColor">@color/whiteFont</item>
        <item name="android:textSize">@dimen/synopsis_head_dimen</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="synopsis_text_value">
        <item name="android:textSize">@dimen/normal_dimen</item>
        <item name="android:textColor">@color/greyFont</item>
        <item name="android:layout_marginTop">@dimen/dp_10_margin</item>
    </style>
</resources>
